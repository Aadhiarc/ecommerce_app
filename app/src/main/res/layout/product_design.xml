<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/layout_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/product_design_imageView_width"
            android:layout_height="@dimen/product_design_imageView_height"
            android:layout_marginLeft="5dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/productImage"
            android:text="@string/productname_product_design"
            android:textSize="@dimen/product_design_productName_textSize"
            android:layout_marginLeft="6dp"
            android:textStyle="italic|bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:text="@string/price_tag_product_design"
            android:textSize="@dimen/product_design_productPrice_textSize"
            android:layout_marginLeft="6dp"
            android:textStyle="italic|bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/productImage"/>
    </RelativeLayout>

</RelativeLayout>