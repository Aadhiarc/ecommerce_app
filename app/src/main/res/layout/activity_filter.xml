<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter">


    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/chip_btm_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/layout_background"
        app:cnb_menuResource="@menu/bottom_navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:cnb_radius="8dp"
        android:elevation="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_background"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:elevation="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories_heading"
            android:textSize="@dimen/Filter_heading_dim"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:background="@drawable/layout_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/centreLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/smartPhone"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/Filter_smartphone_btn_width"
                android:layout_height="@dimen/filter_smartphone_btn_height"
                android:background="@drawable/button_stroke_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/filter_smart_phones_cat"
                android:textSize="12dp"
                android:textStyle="bold|italic"
                app:neumorph_backgroundColor="@color/yellow"
                app:neumorph_shadowColorDark="@color/black"
                app:neumorph_shadowColorLight="@color/neo_white" />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/laptops"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/filter_lapton_btn_width"
                android:layout_height="@dimen/filter_laptopd_btn_height"
                android:layout_gravity="center"
                android:background="@drawable/button_stroke_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/filter_laptops_cat"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold|italic"
                app:neumorph_backgroundColor="@color/yellow"
                app:neumorph_shadowColorDark="@color/black"
                app:neumorph_shadowColorLight="@color/neo_white" />

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:gravity="center">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/fragrances"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/filter_fragrance_btn_width"
                android:layout_height="@dimen/filter_fragrances_btn_height"
                android:layout_gravity="center"
                android:background="@drawable/button_stroke_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/filter_fragrances_cat"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="italic|bold"
                app:neumorph_backgroundColor="@color/yellow"
                app:neumorph_shadowColorDark="@color/black"
                app:neumorph_shadowColorLight="@color/neo_white" />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/skincare"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/filter_skincare_btn_width"
                android:layout_height="@dimen/filter_skincare_btn_height"
                android:layout_gravity="center"
                android:background="@drawable/button_stroke_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/filter_skincare_cat"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:neumorph_backgroundColor="@color/yellow"
                app:neumorph_shadowColorDark="@color/black"
                app:neumorph_shadowColorLight="@color/neo_white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

   <soup.neumorphism.NeumorphButton
                android:id="@+id/groceries"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/filter_groceries_cat_button"
                android:layout_height="@dimen/filter_groceries_btn_height"
                android:layout_gravity="center"
                android:background="@drawable/button_stroke_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/filter_groceries_cat"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic|bold"
                app:neumorph_backgroundColor="@color/yellow"
                app:neumorph_shadowColorDark="@color/black"
                app:neumorph_shadowColorLight="@color/neo_white" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <soup.neumorphism.NeumorphButton
                android:id="@+id/homeDecorations"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="@dimen/filter_homedecorations_btn_width"
                android:layout_height="@dimen/filter_homedecorations_btn_height"
                android:layout_gravity="center"
                android:background="@drawable/button_stroke_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/filter_home_decorations_cat"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold|italic"
                app:neumorph_backgroundColor="@color/yellow"
                app:neumorph_shadowColorDark="@color/black"
                app:neumorph_shadowColorLight="@color/neo_white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>